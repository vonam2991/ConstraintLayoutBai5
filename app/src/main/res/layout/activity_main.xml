<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtRed"
            android:textColor="#fff"
            android:text="Red"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:background="#F44336"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtGreen"
            android:textColor="#fff"
            android:text="Green"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:background="#4CAF50"
            app:layout_constraintTop_toBottomOf="@id/txtRed"
            app:layout_constraintLeft_toLeftOf="@id/txtRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtBlue"
            android:textColor="#fff"
            android:text="Blue"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:background="#3F51B5"
            app:layout_constraintTop_toBottomOf="@id/txtGreen"
            app:layout_constraintLeft_toLeftOf="@id/txtRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtOrange"
            android:textColor="#fff"
            android:text="Orange"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:background="#FFC107"
            app:layout_constraintTop_toBottomOf="@id/txtBlue"
            app:layout_constraintLeft_toLeftOf="@id/txtRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtGray"
            android:textColor="#fff"
            android:text="Gray"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:background="#009688"
            app:layout_constraintTop_toBottomOf="@id/txtOrange"
            app:layout_constraintLeft_toLeftOf="@id/txtRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#fff"
            android:text="Pink"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:background="#9C27B0"
            app:layout_constraintTop_toBottomOf="@id/txtGray"
            app:layout_constraintLeft_toLeftOf="@id/txtRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>